[alias]
	ai = add -i
	ap = add -p
	b = branch -a
    br = branch
	cf = config
	ci = commit -v
	cia = commit -v -a
	cam = commit -a -m
	co = checkout
	cp = cherry-pick
	d = diff
	dc = diff --cached
	dw = diff --color-words
	dwc = diff --cached --color-words
	lf = log --follow
	llf = log -p --follow
	l = log
	ll = log -p
	lt = log trunk..
	llt = log -p trunk..
	lm = log master..
	llm = log -p master..
    pp = !"echo 'Pull'; git pull; echo 'Push'; git push"
	resh1 = reset HEAD^
	s = !git --no-pager status
	sm = submodule
	st = status
	tl = tag -l
	copr = "!f() { git fetch -fu ${2:-origin} refs/pull/$1/head:pr/$1 && git checkout pr/$1; }; f"
	wtlist = worktree list
	wtprune = worktree prune
	wtadd = worktree add
	wtremove = worktree remove

