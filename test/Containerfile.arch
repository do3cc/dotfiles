FROM ghcr.io/archlinux/archlinux:latest

# Update system and install basic dependencies
RUN pacman -Syu --noconfirm && \
    pacman -S --noconfirm \
    base-devel \
    git \
    python \
    python-pip \
    sudo \
    fish \
    wget \
    curl \
    which \
    && pacman -Scc --noconfirm

# Create a test user with sudo privileges
RUN useradd -m -G wheel -s /bin/bash testuser && \
    echo "testuser ALL=(ALL) NOPASSWD: ALL" >> /etc/sudoers

# Set up working directory
WORKDIR /home/testuser/dotfiles
RUN chown -R testuser:testuser /home/testuser

# Switch to test user
USER testuser

# Install uv (Python package manager) as testuser
RUN curl -LsSf https://astral.sh/uv/install.sh | sh
ENV PATH="/home/testuser/.local/bin:$PATH"

# Copy dotfiles to container
COPY --chown=testuser:testuser . /home/testuser/dotfiles/

# Make sure we have a proper shell environment
ENV HOME=/home/testuser
ENV USER=testuser

# Create necessary directories and configure git
RUN mkdir -p ~/.config ~/.local/share && \
    git config --global user.name "Test User" && \
    git config --global user.email "test@example.com" && \
    git config --global init.defaultBranch main


# Default command runs two-step approach: help then actual init
CMD ["sh", "-c", "DOTFILES_ENVIRONMENT=minimal uv run dotfiles-init --help > /dev/null && uv run dotfiles-init --no-remote"]
